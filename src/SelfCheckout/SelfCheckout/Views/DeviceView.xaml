<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModelBase="clr-namespace:SelfCheckout.ViewModels.Base"
             xmlns:controls="clr-namespace:SelfCheckout.Controls"
             viewModelBase:ViewModelLocator.AutoWireViewModel="True"
             xmlns:i18n="clr-namespace:SelfCheckout.Services.Localize"
             xmlns:effects="clr-namespace:SelfCheckout.Effects"
             mc:Ignorable="d"
             x:Name="this"
             x:Class="SelfCheckout.Views.DeviceView">
  <ContentView.Content>
        <Grid>
            <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" HeightRequest="56" Orientation="Horizontal" BindableLayout.ItemsSource="{Binding Tabs}"
                         BackgroundColor="{StaticResource Gray200}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <controls:TappedGrid HorizontalOptions="FillAndExpand" TappedCommand="{Binding Source={x:Reference this}, Path=BindingContext.TabSelectedCommand}"
                                             CommandParameter="{Binding .}">
                            <Label Text="{Binding Text1}" VerticalOptions="Center" HorizontalOptions="Center"/>
                            <BoxView VerticalOptions="End" HeightRequest="4">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView" Binding="{Binding Selected}" Value="True">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView" Binding="{Binding Selected}" Value="False">
                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                        </controls:TappedGrid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <Frame Grid.Row="1" Padding="4" Margin="-2,-2,-2,0">
                <CollectionView ItemsSource="{Binding DeviceInfoItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="4" Margin="4">
                                <Label Margin="4,0,100,0" HorizontalOptions="Start" Text="{Binding Text1}"/>
                                <Label Margin="50,0,8,0" HorizontalOptions="End" Text="{Binding Text2}"/>
                                <BoxView BackgroundColor="{StaticResource Gray100}" HeightRequest="1" VerticalOptions="End"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
            <Grid Grid.Row="2">
                <controls:TappedGrid Padding="0" VerticalOptions="Center" HorizontalOptions="Center"
                                     Style="{StaticResource TappedGridButtonStyle}"
                                     TappedCommand="{Binding LogoutCommand}"
                                     WidthRequest="100"
                                     effects:RoundCornersEffect.CornerRadius="3">
                    <controls:GradientBackground/>
                    <controls:CustomLabel UpperCase="True" Text="{i18n:Translate Confirm}" TextColor="{StaticResource Gray50}" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                </controls:TappedGrid>
            </Grid>
        </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>