<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModelBase="clr-namespace:SelfCheckout.ViewModels.Base"
             xmlns:forms="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:common="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:i18n="clr-namespace:SelfCheckout.Services.Localize"
             xmlns:component="clr-namespace:SelfCheckout.Views.Components"
             xmlns:prism="http://prismlibrary.com"
             xmlns:controls="clr-namespace:SelfCheckout.Controls"
             xmlns:views="clr-namespace:SelfCheckout.Views"
             prism:ViewModelLocator.AutowireViewModel="True"
             Visual="Material"
             mc:Ignorable="d"
             x:Class="SelfCheckout.Views.OrderView">
    <ContentView.Content>
        <Grid>
            <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Entry IsVisible="False" x:Name="entrySessionKey" Text="{Binding LoginData.SessionKey}"/>
                    <Grid Grid.Column="0">
                        <forms:ZXingBarcodeImageView
                            BarcodeFormat="QR_CODE"
                            HeightRequest="150"
                            WidthRequest="150"
                            BarcodeValue="{Binding Source={x:Reference entrySessionKey}, Path=Text}">
                            <forms:ZXingBarcodeImageView.BarcodeOptions>
                                <common:EncodingOptions Width="150" Height="150" PureBarcode="True"/>
                            </forms:ZXingBarcodeImageView.BarcodeOptions>
                        </forms:ZXingBarcodeImageView>
                    </Grid>
                    <StackLayout Grid.Column="1" Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="0">
                                <Label FontAttributes="Bold" Text="{Binding CurrentShoppingCard}"/>
                                <Label Text="{Binding CustomerData.Person.EnglishName}"/>
                            </StackLayout>
                            <Image Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Source="ic_user"/>
                        </Grid>
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray100}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="{i18n:Translate PassportNo}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding CustomerData.Person.PassportNo}" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="{i18n:Translate Nationality}"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding CustomerData.Person.Nationality}" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="2" Grid.Column="0" Text="{i18n:Translate Type}"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding CustomerData.Person.CustomerTypeCode}" HorizontalTextAlignment="End"/>
                        </Grid>
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray100}"/>
                    </StackLayout>
                </Grid>
                <Grid Grid.Row="1" BackgroundColor="{StaticResource Gray100}">
                    <Grid Margin="1" BackgroundColor="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="Filter" VerticalOptions="Center" HorizontalTextAlignment="Start"/>
                            <controls:TappedGrid Grid.Column="1" TappedCommand="{Binding CustomerFilterTappedCommand}">
                                <Label Text="All" VerticalOptions="Center" HorizontalTextAlignment="End"/>
                            </controls:TappedGrid>
                        </Grid>
                        <Label Grid.Column="2" VerticalOptions="Center"
                                   Text="&#xf0d7;" FontSize="24"
                                   Margin="8" Style="{StaticResource LabelIconStyle}"/>
                    </Grid>
                </Grid>
                <StackLayout Grid.Row="2" HeightRequest="56" Orientation="Horizontal" Spacing="0" BindableLayout.ItemsSource="{Binding Tabs}"
                         BackgroundColor="{StaticResource Gray200}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <controls:TappedGrid HorizontalOptions="FillAndExpand" TappedCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentView}, AncestorLevel=1}, Path=BindingContext.TabSelectedCommand}"
                                             CommandParameter="{Binding .}">
                                <Label Text="{Binding Text1}" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding Selected}" Value="True">
                                            <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Selected}" Value="False">
                                            <Setter Property="TextColor" Value="{StaticResource PrimaryText}"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <BoxView VerticalOptions="End" HeightRequest="2">
                                    <BoxView.Triggers>
                                        <DataTrigger TargetType="BoxView" Binding="{Binding Selected}" Value="True">
                                            <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="BoxView" Binding="{Binding Selected}" Value="False">
                                            <Setter Property="BackgroundColor" Value="{StaticResource Gray300}"/>
                                        </DataTrigger>
                                    </BoxView.Triggers>
                                </BoxView>
                                <BoxView IsVisible="{Binding Selected}" BackgroundColor="{StaticResource Primary}" WidthRequest="8" HeightRequest="8" CornerRadius="4"
                                         VerticalOptions="Start" HorizontalOptions="End" Margin="2,4"/>
                            </controls:TappedGrid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <CollectionView Grid.Row="3" IsGrouped="True" ItemsSource="{Binding OrderInvoices}" Margin="0,0,0,32">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" SnapPointsAlignment="Start" SnapPointsType="None"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate>
                            <Grid BackgroundColor="{StaticResource Gray100}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Padding="8" BackgroundColor="{StaticResource Secondary}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="Label">
                                            <Setter Property="TextColor" Value="{StaticResource Gray50}"/>
                                        </Style>
                                    </Grid.Resources>
                                    <Label Grid.Row="0" Text="{i18n:Translate InvoiceNo}"/>
                                    <BoxView HeightRequest="1" Grid.Row="1" BackgroundColor="{StaticResource Gray50}"/>
                                    <Label Grid.Row="2" HorizontalTextAlignment="Center" VerticalOptions="Center" Text="{Binding InvoiceNo}"/>
                                </Grid>
                                <Grid Grid.Column="1" Padding="0,4,4,0" VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" MaxLines="1">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="&#xe905;" FontFamily="{StaticResource KPIconFont}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding InvoiceDateTime, Converter={StaticResource DateTimeFormatConverter}}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="0" Grid.Column="1" MaxLines="1" Text="{Binding ShoppingCardNo}" HorizontalTextAlignment="End"/>
                                    <Label Grid.Row="1" Grid.Column="0" MaxLines="2">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{i18n:Translate PassportNo}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding PassportNo}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="1" Grid.Column="1" MaxLines="2" Text="{Binding CustomerName}" HorizontalTextAlignment="End"/>
                                    <Label Grid.Row="2" Grid.Column="0" MaxLines="1" Text="{i18n:Translate Payment}"/>
                                    <Label Grid.Row="2" Grid.Column="1" MaxLines="1" Text="{Binding PaymentType}" HorizontalTextAlignment="End"/>
                                    <Label Grid.Row="3" Grid.Column="0" MaxLines="1" FontSize="Medium" Text="{i18n:Translate TotalNet}" TextColor="{StaticResource Primary}"/>
                                    <Label Grid.Row="3" Grid.Column="1" MaxLines="1" FontSize="Medium" Text="{Binding TotalNet, Converter={StaticResource CurrencyFormatConverter}}" TextColor="{StaticResource Primary}" HorizontalTextAlignment="End"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <component:OrderItemView IsEnableChkOrder="False" IsEnableEntryOrderQty="False"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
            <views:OrderSummaryView VerticalOptions="End"/>
        </Grid>
    </ContentView.Content>
</ContentView>