<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i18n="clr-namespace:SelfCheckout.Services.Localize"
             xmlns:controls="clr-namespace:SelfCheckout.Controls"
             xmlns:behaviors="clr-namespace:SelfCheckout.Behaviors"
             mc:Ignorable="d"
             x:Class="SelfCheckout.Views.Components.OrderItemView">
    <ContentView.Content>
        <Frame Margin="4" Padding="0">
            <!--<SwipeView>
                <SwipeView.RightItems>
                    <SwipeItemView>
                        <controls:TappedGrid Tapped="Delete_Tapped" BackgroundColor="Red" WidthRequest="96">
                            <StackLayout VerticalOptions="Center" Margin="8" Spacing="0">
                                <Label Style="{StaticResource LabelIconStyle}" TextColor="{StaticResource Gray50}" VerticalOptions="Center" FontSize="36" Text="&#xf1f8;" HorizontalOptions="Center"/>
                                <Label Text="{i18n:Translate Delete}" TextColor="{StaticResource Gray50}" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                            </StackLayout>
                        </controls:TappedGrid>
                    </SwipeItemView>
                </SwipeView.RightItems>-->
                <Grid Padding="8" BackgroundColor="{StaticResource Gray50}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <controls:TappedGrid Grid.Column="0" Tapped="CheckBox_Tapped">
                        <Image Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.Triggers>
                                <DataTrigger TargetType="Image" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="Source" Value="ic_check_active"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Image" Binding="{Binding IsSelected}" Value="False">
                                    <Setter Property="Source" Value="ic_check_normal"/>
                                </DataTrigger>
                            </Image.Triggers>
                        </Image>
                    </controls:TappedGrid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding ItemDetail.Item.Desc}" MaxLines="1" LineBreakMode="TailTruncation"/>
                        <Label Grid.Row="1" Grid.Column="0" FontSize="Micro" Text="{Binding ItemDetail.Item.Code}"/>
                        <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding ItemDetail.UnitPrice, Converter={StaticResource CurrencyFormatConverter}}" Style="{StaticResource LabelNumericStyle}"/>
                        <Label Grid.Row="2" Grid.Column="0" Text="{i18n:Translate Amount}"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding BillingAmount.TotalAmount.CurrAmt, Converter={StaticResource CurrencyFormatConverter}}" Style="{StaticResource LabelNumericStyle}"/>
                        <Label Grid.Row="3" Grid.Column="0" Text="{i18n:Translate Discount}" TextColor="Red"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding BillingAmount.DiscountAmount.CurrAmt, Converter={StaticResource CurrencyFormatConverter}}" TextColor="Red" Style="{StaticResource LabelNumericStyle}"/>
                        <BoxView Grid.Row="4" Grid.ColumnSpan="2" BackgroundColor="{StaticResource Gray100}" HeightRequest="1"/>
                        <Entry Grid.Row="5" Grid.Column="0" HorizontalOptions="Start" HorizontalTextAlignment="Center" 
                               Unfocused="Entry_Qty_Unfocused" WidthRequest="72" Text="{Binding BillingQuantity.Quantity}" Keyboard="Numeric"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding BillingAmount.NetAmount.CurrAmt, Converter={StaticResource CurrencyFormatConverter}}" VerticalOptions="Center" TextColor="{StaticResource Primary}" Style="{StaticResource LabelNumericStyle}"/>
                    </Grid>
                    <controls:TappedGrid Grid.Column="2" Padding="4">
                        <Label Style="{StaticResource LabelIconStyle}" Text="&#xf054;" FontSize="18" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </controls:TappedGrid>
                </Grid>
            <!--</SwipeView>-->
        </Frame>
    </ContentView.Content>
</ContentView>